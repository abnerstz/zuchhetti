{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "jest.setup.ts",
    "jest.config.ts",
    "jest.polyfills.ts",
    "jest-dom.d.ts"
  ]
}